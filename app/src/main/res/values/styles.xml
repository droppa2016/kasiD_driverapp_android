<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/larger_title_font_size</item>
        <item name="android:textColor">#374957</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewRecyclerViewHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/regular_font_size</item>
        <item name="android:textColor">#374957</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewSubHeading">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">#374957</item>
    </style>

    <style name="TextDescription">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">#374957</item>
    </style>

    <!--Style for title TextViews-->
    <style name="TextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/larger_title_font_size</item>
        <item name="android:textColor">#374957</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewHeadings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/larger_title_font_size</item>
        <item name="android:textColor">#374957</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Style for Description TextViews-->
    <style name="TextViewDescription">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">#374957</item>
    </style>

    <!--Style for Main Button-->
    <style name="ButtonMain">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Style for Secondary Button-->
    <style name="ButtonSecondary">
        <item name="android:background">@drawable/button_background_red_borders</item>
        <item name="android:textColor">@color/skynet_red</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>