<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.Driverandroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/skynet_color</item>
        <item name="colorPrimaryVariant">@color/skynet_color</item>
        <item name="colorOnPrimary">@color/grey_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/skynet_red</item>
        <item name="colorSecondaryVariant">@color/skynet_red</item>
        <item name="colorOnSecondary">@color/grey_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--Font-->
        <!--        <item name="android:fontFamily">@font/segoe_ui</item>-->
        <!--<item name="android:fontFamily">@font/poetsenone_regular</item>-->
    </style>

    <style name="Theme.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/skynet_color</item>
        <item name="colorPrimaryVariant">@color/skynet_color</item>
        <item name="colorOnPrimary">@color/grey_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/skynet_red</item>
        <item name="colorSecondaryVariant">@color/skynet_red</item>
        <item name="colorOnSecondary">@color/grey_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="actionBarItemBackground">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        <!--Font-->
        <!--        <item name="android:fontFamily">@font/segoe_ui</item>-->
        <!--<item name="android:fontFamily">@font/poetsenone_regular</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="Theme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/skynet_color</item>
        <item name="colorPrimaryVariant">@color/skynet_color</item>
        <item name="colorOnPrimary">@color/grey_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/skynet_red</item>
        <item name="colorSecondaryVariant">@color/skynet_red</item>
        <item name="colorOnSecondary">@color/grey_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


        <!--Font-->
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <!--<item name="android:fontFamily">@font/poetsenone_regular</item>-->
    </style>


    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--        <item name="android:windowBackground">@drawable/skynet_splash</item>-->
        <item name="windowSplashScreenBackground">@drawable/skynet_splash</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@drawable/skynet_splash</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
        <item name="actionBarStyle">@style/MyActionBarStyle</item>

        <item name="statusBarBackground" tools:targetApi="l">@color/skynet_red</item>
        <item name="android:statusBarColor">@color/skynet_red</item>
        <item name="android:textColor">@color/grey_text</item>

    </style>

    <style name="MyActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <!-- Set the background of the action bar directly in the style -->
        <item name="android:background">@color/red</item>
    </style>

    <!--Rounded corners for popup dialog-->
    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">22dp</item>
    </style>

    <style name="ButtonCorner" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerRadius">35dp</item>
    </style>

    <!--theme for dialog box-->
    <style name="RoundedCornersDialog1" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">20dp</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- Customize the start icon size using app:boxBackgroundMode -->
        <item name="android:textSize">16sp</item> <!-- Customize text size if needed -->
    </style>

    <style name="CustomTextInputEditText">
        <item name="boxBackgroundMode">none
        </item> <!-- or "none_overlay" if you want to keep the floating label -->
    </style>

    <style name="Theme.Driverandroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Driverandroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Driverandroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Base application theme. -->
    <style name="Base.Theme.Driverandroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="DatePicker" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/skynet_color</item>
        <item name="colorPrimaryDark">@color/skynet_color</item>
        <item name="colorAccent">@color/skynet_color</item>
        <item name="android:colorAccent">@color/skynet_color</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.Skynetdriver" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Skynetdriver" parent="Base.Theme.Skynetdriver" />

</resources>