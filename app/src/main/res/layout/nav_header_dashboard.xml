<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingVertical="@dimen/activity_horizontal_margin"
    android:paddingHorizontal="@dimen/activity_vertical_margin"
    tools:viewBindingIgnore="false"
    android:theme="@style/Theme.NoActionBar">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="70dp"
        android:layout_marginTop="@dimen/component_spacing_15dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/card_background"
        android:backgroundTint="@color/white"
        app:contentPadding="3dp">

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/group_profile_background" >

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_component" >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/nav_header_profile_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avator2"/>

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="35dp">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/userName_sideMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textAlignment="center"
        android:fontFamily="@font/segoe_ui"
        android:text="@string/rhulani_chauke_mpho"
        android:textSize="@dimen/title_font_size"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtVehicleType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_header_subtitle"
                android:fontFamily="@font/segoe_ui"
                style="@style/TextAppearance.MaterialComponents.Headline1"
                android:textSize="@dimen/regular_font_size"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtVehicleRegistration01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentEnd="true"
                android:text="@string/nav_header_subtitle_1"
                android:fontFamily="@font/segoe_ui"
                style="@style/TextAppearance.MaterialComponents.Headline1"
                android:textSize="@dimen/regular_font_size"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
