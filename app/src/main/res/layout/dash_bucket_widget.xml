<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    android:layout_marginBottom="@dimen/component_spacing_3dp"
    android:layout_marginTop="@dimen/component_spacing_7dp"
    android:backgroundTint="@color/skynet_color"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/component_spacing_7dp"
        android:paddingHorizontal="@dimen/component_spacing_10dp"
        android:layout_marginLeft="@dimen/standard_spacing"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/component_spacing_20dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBucketType"
                    android:fontFamily="@font/segoe_ui"
                    android:textStyle="bold"
                    android:textSize="@dimen/regular_font_size"
                    style="@style/TextAppearance.MaterialComponents.Headline1"
                    android:textColor="@color/skynet_color"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBucketStatus"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/regular_font_size"
                    style="@style/TextAppearance.MaterialComponents.Headline1"
                    android:layout_marginRight="@dimen/component_spacing_10dp"
                    android:textColor="@color/skynet_color"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/component_spacing_3dp"
                android:paddingHorizontal="@dimen/component_spacing_15dp"
                android:paddingVertical="@dimen/component_spacing_3dp"
                android:background="@drawable/red_time_date_new_booking_widget_background"
               >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingVertical="@dimen/component_spacing_3dp"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/component_spacing_20dp"
                        android:layout_height="@dimen/component_spacing_20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/alarm_clock_icon_upcoming_booking_card" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/component_spacing_4dp"
                        android:fontFamily="@font/segoe_ui"
                        android:id="@+id/tvBucketTime"
                        android:textColor="@color/black"
                        android:textSize="@dimen/regular_font_size"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="@dimen/component_spacing_3dp"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/component_spacing_20dp"
                        android:layout_height="@dimen/component_spacing_20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/calendar_date_icon" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/component_spacing_4dp"
                        android:fontFamily="@font/segoe_ui"
                        android:id="@+id/tvBucketDate"
                        android:textColor="@color/black"
                        android:textSize="@dimen/regular_font_size"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/standard_spacing"
                    android:gravity="center_vertical|end"
                    android:paddingVertical="@dimen/component_spacing_3dp"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/component_spacing_20dp"
                        android:layout_height="@dimen/component_spacing_20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/wallet_icon" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/component_spacing_4dp"
                        android:fontFamily="@font/segoe_ui"
                        android:id="@+id/tvBucketPrice"
                        android:textFontWeight="800"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sub_title_font_size"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/standard_spacing"
            android:paddingVertical="@dimen/component_spacing_5dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/grey_text1"
                android:fontFamily="@font/segoe_ui"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:text="Pick Up Address"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/address_marker_blue_icon"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/regular_font_size"
                    android:lines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:fontFamily="@font/segoe_ui"
                    android:id="@+id/tvPickUpAddress" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>