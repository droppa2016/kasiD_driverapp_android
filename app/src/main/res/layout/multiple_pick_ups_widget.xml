<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/component_spacing_15dp"
    android:layout_marginTop="@dimen/component_spacing_10dp"
    android:visibility="gone"
    android:id="@+id/crdCurrentBooking"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginHorizontal="@dimen/component_spacing_5dp"
            android:src="@drawable/white_address_location_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="@dimen/component_spacing_5dp"
            android:background="@color/card_background"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/segoe_ui"
                android:maxLines="1"
                android:id="@+id/txtActivitype"
                android:paddingHorizontal="@dimen/standard_spacing"
                android:textColor="@color/grey_text"
                android:textSize="@dimen/regular_font_size" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextAppearance.MaterialComponents.Headline1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/component_spacing_3dp"
                android:fontFamily="@font/segoe_ui"
                android:lines="2"
                android:paddingHorizontal="@dimen/standard_spacing"
                android:id="@+id/txtActivityAddress"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="@dimen/sub_title_font_size"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>