<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    tools:context=".fragments.SkyNetRatesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/dashboard_rates__wallet_money_icon"
            android:tint="@color/skynet_red" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/component_spacing_5dp">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewHeading"
                android:text="@string/rate_structures" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtrateVName"
                style="@style/TextViewSubHeading"
                android:text="@string/the_current_rates_agreed_upon_between_skynet_and_the_contract_owner" />

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/skynet_red"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <LinearLayout
                android:id="@+id/lytBack"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="5dp"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_chevron_left_24"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewRecyclerViewHeading"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/route_name"
                    android:textColor="@color/quantum_white_100" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvRouteName"
                    style="@style/TextViewRecyclerViewHeading"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textColor="@color/quantum_white_100"
                    tools:text="Place Holder" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:background="@color/quantum_white_100" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewRecyclerViewHeading"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="@string/branch_name"
                    android:textColor="@color/quantum_white_100" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvBranchName"
                    style="@style/TextViewRecyclerViewHeading"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textColor="@color/quantum_white_100"
                    tools:text="JNX" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytNext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1.4"
                android:gravity="center_vertical|end"
                android:orientation="vertical"
                android:paddingHorizontal="5dp"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_chevron_right_24"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/component_spacing_15dp"
        android:background="@color/card_background"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/branch"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginVertical="2.5dp"
                    android:backgroundTint="@color/gray_darker" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvProvince01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text=""
                    android:textColor="@color/quantum_black_100"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/rate_type"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginVertical="2.5dp"
                    android:backgroundTint="@color/gray_darker" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvRateType01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text=""
                    android:textColor="@color/quantum_black_100"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="start"
                    android:fontFamily="sans-serif-condensed"
                    android:lines="1"
                    android:text="@string/fixed_amount"

                    android:textColor="@color/quantum_black_100"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginVertical="2.5dp"
                    android:backgroundTint="@color/gray_darker" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvFixedRateAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text=""
                    android:textColor="@color/quantum_black_100"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tierList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>