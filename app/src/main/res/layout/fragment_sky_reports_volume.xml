<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_cream"
    android:orientation="vertical"
    tools:context=".fragments.SkyNetReportsVolumeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lytSummery"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/component_spacing_10dp"
                android:layout_marginTop="@dimen/component_spacing_5dp"
                android:backgroundTint="@color/card_background"
                app:cardCornerRadius="15dp"
                app:contentPadding="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50dp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextViewRecyclerViewHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/collections"
                            android:textColor="@color/skynet_red" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextViewSubHeading"
                            android:layout_gravity="start"
                            android:text="@string/a_record_of_all_your_collections_made_this_month" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/component_spacing_10dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:backgroundTint="@color/white_cream"
                                app:cardCornerRadius="25dp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvCollectionsToday"
                                    style="@style/TextViewSubHeading"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:paddingHorizontal="25dp"
                                    android:paddingVertical="2dp"
                                    android:text="@string/this_month"
                                    android:textColor="@color/quantum_black_100" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="15dp"
                                android:layout_marginBottom="3dp"
                                android:backgroundTint="@color/white_cream"
                                app:cardCornerRadius="25dp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/totalMonthlyCollectionsValue"
                                    style="@style/TextViewSubHeading"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:paddingHorizontal="25dp"
                                    android:paddingVertical="2dp"
                                    android:text="@string/total_0"
                                    android:textColor="@color/quantum_black_100" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="center"
                        android:src="@drawable/vectary_texture" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/component_spacing_10dp"
                android:layout_marginTop="@dimen/component_spacing_10dp"
                android:backgroundTint="@color/card_background"
                android:paddingVertical="5dp"
                app:cardCornerRadius="@dimen/component_spacing_15dp"
                app:contentPadding="@dimen/component_spacing_15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextViewRecyclerViewHeading"
                            android:text="@string/deliveries"
                            android:textColor="@color/skynet_blue" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextViewSubHeading"
                            android:text="@string/a_record_of_all_your_deliveries_made_this_month" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/component_spacing_10dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:backgroundTint="@color/app_background"
                                app:cardCornerRadius="25dp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvDeliveriesToday"
                                    style="@style/TextViewSubHeading"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:paddingHorizontal="25dp"
                                    android:paddingVertical="2dp"
                                    android:text="@string/this_month"
                                    android:textColor="@color/quantum_black_100" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="15dp"
                                android:layout_marginBottom="3dp"
                                android:backgroundTint="@color/app_background"
                                app:cardCornerRadius="25dp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/totalMonthlyDeliveriesValue"
                                    style="@style/TextViewSubHeading"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:paddingHorizontal="25dp"
                                    android:paddingVertical="2dp"
                                    android:text="@string/total_0"
                                    android:textColor="@color/quantum_black_100" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="center"
                        android:src="@drawable/vectary_texture" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/component_spacing_10dp"
                android:layout_marginVertical="@dimen/component_spacing_10dp"
                android:backgroundTint="@color/card_background"
                app:cardCornerRadius="@dimen/component_spacing_15dp"
                app:contentPadding="@dimen/component_spacing_15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewSubHeading"
                        android:layout_width="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="@string/total_waybills_this_month" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/totalMonthlyWaybillsValue"
                        style="@style/TextViewSubHeading"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="5dp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:paddingHorizontal="25dp"
                        android:text="@string/_0" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!--Summary-->
    <LinearLayout
        android:id="@+id/lytSummery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_summery_background"
        android:elevation="@dimen/component_spacing_20dp"
        android:orientation="vertical"
        android:paddingVertical="@dimen/component_spacing_10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/component_spacing_10dp">

            <TableRow tools:ignore="UselessParent">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewSubHeading"
                    android:layout_marginStart="@dimen/component_spacing_5dp"
                    android:layout_marginEnd="@dimen/component_spacing_20dp"
                    android:layout_weight="1"
                    android:text="@string/revenue"
                    android:textColor="@color/quantum_white_100" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/revenueValue"
                    style="@style/TextViewSubHeading"
                    android:layout_marginHorizontal="@dimen/component_spacing_10dp"
                    android:paddingVertical="@dimen/component_spacing_4dp"
                    android:text="@string/r_00_00"
                    android:textColor="@color/quantum_white_100" />
            </TableRow>

        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/component_spacing_10dp"
            android:background="@color/quantum_white_100" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/component_spacing_10dp">

            <TableRow tools:ignore="UselessParent">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewSubHeading"
                    android:layout_marginStart="@dimen/component_spacing_5dp"
                    android:layout_marginEnd="@dimen/component_spacing_20dp"
                    android:layout_weight="1"
                    android:text="@string/expenses"
                    android:textColor="@color/quantum_white_100"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/expensesValue"
                    style="@style/TextViewSubHeading"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/component_spacing_10dp"
                    android:text="@string/r_00_00"
                    android:textColor="@color/quantum_white_100" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/component_spacing_10dp"
            android:layout_marginTop="@dimen/component_spacing_5dp">

            <TableRow tools:ignore="UselessParent">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewRecyclerViewHeading"
                    android:layout_marginStart="@dimen/component_spacing_5dp"
                    android:layout_marginEnd="@dimen/component_spacing_20dp"
                    android:layout_weight="1"
                    android:text="@string/total_profit"
                    android:textColor="@color/quantum_white_100"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/profitValue"
                    style="@style/TextViewRecyclerViewHeading"
                    android:layout_marginHorizontal="@dimen/component_spacing_10dp"
                    android:text="@string/r_00_00"
                    android:textColor="@color/quantum_white_100"
                    android:textSize="14sp" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</RelativeLayout>