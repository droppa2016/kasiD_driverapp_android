<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SkyNetOtpVerificationFragment">

    <include layout="@layout/background_splash_gradient" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/component_spacing_10dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/white_card"
        android:elevation="32dp"
        android:fillViewport="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="@dimen/component_spacing_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:contentDescription="@string/skynet_logo"
                android:src="@drawable/kasi_d_logo" />

            <TextView
                style="@style/TextViewHeading"
                android:text="@string/account_verification"
                android:textColor="@color/skynet_color" />

            <!--HERE-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/component_spacing_15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/component_spacing_15dp">

                    <TextView
                        android:id="@+id/responseMessageText"
                        style="@style/TextViewSubHeading"
                        android:text="@string/otp_sent_to"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/regular_font_size" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_spacing"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingTop="17dp"
                        android:paddingBottom="7dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/otpBlock1"
                                android:layout_width="45dp"
                                android:layout_height="50dp"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/otp_block_background_grey"
                                android:digits="0123456789"
                                android:gravity="center"
                                android:hint="@string/_0"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColor="@color/black"
                                android:textColorHint="@color/light_grey"
                                android:textSize="14sp" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/otpBlock2"
                                android:layout_width="45dp"
                                android:layout_height="50dp"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/otp_block_background_grey"
                                android:digits="0123456789"
                                android:gravity="center"
                                android:hint="@string/_0"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColor="@color/black"
                                android:textColorHint="@color/light_grey"
                                android:textSize="14sp" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/otpBlock3"
                                android:layout_width="45dp"
                                android:layout_height="50dp"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/otp_block_background_grey"
                                android:digits="0123456789"
                                android:gravity="center"
                                android:hint="@string/_0"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColor="@color/black"
                                android:textColorHint="@color/light_grey"
                                android:textSize="14sp" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/otpBlock4"
                                android:layout_width="45dp"
                                android:layout_height="50dp"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/otp_block_background_grey"
                                android:digits="0123456789"
                                android:gravity="center"
                                android:hint="@string/_0"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColor="@color/black"
                                android:textColorHint="@color/light_grey"
                                android:textSize="14sp" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/otpBlock5"
                                android:layout_width="45dp"
                                android:layout_height="50dp"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/otp_block_background_grey"
                                android:digits="0123456789"
                                android:gravity="center"
                                android:hint="@string/_0"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColor="@color/black"
                                android:textColorHint="@color/light_grey"
                                android:textSize="14sp" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/otpBlock6"
                                android:layout_width="45dp"
                                android:layout_height="50dp"
                                android:background="@drawable/otp_block_background_grey"
                                android:digits="0123456789"
                                android:gravity="center"
                                android:hint="@string/_0"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColor="@color/black"
                                android:textColorHint="@color/light_grey"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/verifyOTP"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_height"
                            android:layout_marginHorizontal="@dimen/component_spacing_15dp"
                            android:layout_marginTop="@dimen/component_spacing_25dp"
                            android:background="@drawable/button_background"
                            android:text="@string/verify"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/component_spacing_25dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        tools:ignore="UselessParent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/TextViewSubHeading"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:text="@string/did_not_receive_the_otp"
                                android:textColor="@color/grey_text"
                                android:textSize="@dimen/regular_font_size" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/resendOTPText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/segoe_ui"
                                android:gravity="center"
                                android:text="@string/resend_otp"
                                android:textColor="@color/skynet_color"
                                android:textSize="@dimen/regular_font_size"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>