<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingVertical="@dimen/component_spacing_30dp"
    tools:context="co.za.kasi.dialogs.ReceiverNameDialogFragment"
    android:paddingHorizontal="@dimen/component_spacing_10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="@dimen/component_spacing_15dp"
        app:contentPadding="@dimen/component_spacing_15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/person_icon_registration" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/alertTitle"
                style="@style/TextViewHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/component_spacing_10dp"
                android:text="Enter Receiver Name"
                android:textColor="@color/black"
                android:textSize="@dimen/title_font_size"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/component_spacing_15dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Receivers name" />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBackDialog"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background_red_borders"
                    android:gravity="center"
                    android:drawableStart="@drawable/cross_svgrepo_com"
                    android:paddingStart="36dp"
                    android:paddingEnd="20dp"
                    android:text="@string/back"
                    android:textAllCaps="false"
                    android:textColor="@color/skynet_red"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSubmitName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background_green_borders"
                    android:gravity="center"
                    android:drawableStart="@drawable/tick_svgrepo_com"
                    android:paddingStart="36dp"
                    android:paddingEnd="20dp"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="#023202"
                    android:textSize="14sp"  />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>