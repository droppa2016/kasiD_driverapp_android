<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_cream"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/lytSummery"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="15dp"
                android:backgroundTint="@color/card_background"
                app:cardCornerRadius="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:textSize="14sp"
                            android:textFontWeight="600"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/skynet_red"
                            android:layout_weight="700"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Collections"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:textSize="12sp"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="sans-serif-condensed"
                            android:text="A daily vs total report of your warehouse deliveries."/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="25dp"
                                android:layout_marginBottom="3dp"
                                android:backgroundTint="@color/white_cream">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="5dp"
                                    android:textSize="14sp"
                                    android:textFontWeight="600"
                                    android:paddingHorizontal="25dp"
                                    android:paddingVertical="2dp"
                                    android:textColor="@color/quantum_black_100"
                                    android:layout_gravity="center_horizontal"
                                    android:id="@+id/tvCollectionsToday"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Today 0"/>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="25dp"
                                android:layout_marginBottom="3dp"
                                android:layout_marginHorizontal="15dp"
                                android:backgroundTint="@color/white_cream">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="5dp"
                                    android:textSize="14sp"
                                    android:paddingVertical="2dp"
                                    android:textFontWeight="600"
                                    android:paddingHorizontal="25dp"
                                    android:textColor="@color/quantum_black_100"
                                    android:layout_gravity="center_horizontal"
                                    android:id="@+id/tvCollections"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Total 0"/>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/vectary_texture"
                        android:scaleType="center"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="15dp"
                android:paddingVertical="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="15dp"
                android:backgroundTint="@color/card_background"
                app:cardCornerRadius="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:textSize="14sp"
                            android:textFontWeight="600"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/skynet_color"
                            android:layout_weight="700"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Deliveries"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:textSize="12sp"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="sans-serif-condensed"
                            android:text="A month to date summary of all deliveries for the month"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="25dp"
                                android:layout_marginBottom="3dp"
                                android:backgroundTint="@color/app_background">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="5dp"
                                    android:textSize="14sp"
                                    android:textFontWeight="600"
                                    android:paddingHorizontal="25dp"
                                    android:textColor="@color/quantum_black_100"
                                    android:layout_gravity="center_horizontal"
                                    android:id="@+id/tvDeliveriesToday"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Today 0"/>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="25dp"
                                android:layout_marginBottom="3dp"
                                android:layout_marginHorizontal="15dp"
                                android:backgroundTint="@color/app_background">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="5dp"
                                    android:textSize="14sp"
                                    android:paddingVertical="2dp"
                                    android:textFontWeight="600"
                                    android:paddingHorizontal="25dp"
                                    android:textColor="@color/quantum_black_100"
                                    android:layout_gravity="center_horizontal"
                                    android:id="@+id/tvDeliveries"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Total 0"/>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/vectary_texture"
                        android:scaleType="center"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="3dp"
                android:layout_marginHorizontal="15dp"
                android:backgroundTint="@color/card_background"
                app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:layout_weight="1"
                                    android:textFontWeight="600"
                                    android:textColor="@color/quantum_black_100"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Total Volume"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="5dp"
                                    android:textSize="16sp"
                                    android:textFontWeight="600"
                                    android:paddingHorizontal="25dp"
                                    android:textColor="@color/quantum_black_100"
                                    android:layout_gravity="center_horizontal"
                                    android:id="@+id/tvTotalVolume"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="0"/>

                    </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!--SUmmery-->
    <LinearLayout
        android:id="@+id/lytSummery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_summery_background"
        android:orientation="vertical"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="65dp"
            android:background="@drawable/white_stroke_container"
            android:orientation="horizontal"
            android:paddingHorizontal="35dp">

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp">

            <TableRow>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Revenue"
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="500"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text=""
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="500"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvRevenueAmnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="R 00.00"
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="500"
                    android:textSize="12sp" />
            </TableRow>
        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/quantum_white_100" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp">

            <TableRow android:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Fuel Surcharge"
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="500"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text=""
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="500"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvFuelSurchargePerc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="0 %"
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="500"
                    android:textSize="12sp" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp">

            <TableRow android:paddingBottom="3dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Expenses"
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="500"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text=""
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="500"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvExpensesAmnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="R 0.00"
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="500"
                    android:textSize="12sp" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp">

            <TableRow android:paddingBottom="3dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Penalties"
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="500"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text=""
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="500"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPenaltyAmnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="R 0.00"
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="500"
                    android:textSize="12sp" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp">

            <TableRow>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Total Profit "
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="500"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text=""
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="500"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvProfitAmnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="R 00.00"
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="500"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>