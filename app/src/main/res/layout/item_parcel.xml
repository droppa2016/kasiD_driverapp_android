<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="@dimen/component_spacing_10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/tickIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_check"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/component_spacing_10dp"
        android:contentDescription="@string/scanned_tick"/>

    <TextView
        android:id="@+id/parcelNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_semi_bold"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tickIcon"
        tools:text="Parcel Barcode"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/unscanIcon"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:src="@drawable/return_parcel_image"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:layout_marginEnd="@dimen/component_spacing_10dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/scanned_tick"/>

</RelativeLayout>