<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:layout_marginTop="10dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:textSize="16sp"
        android:textFontWeight="600"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/quantum_black_100"
        android:id="@+id/tvBranchName"
        android:fontFamily="sans-serif-condensed"
        android:text="Branch name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="20dp"
        android:background="@color/card_background"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textFontWeight="500"
                    android:textColor="@color/quantum_black_100"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Province"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:backgroundTint="@color/gray_darker"
                    android:layout_marginVertical="2.5dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textFontWeight="600"
                    android:textColor="@color/quantum_black_100"
                    android:id="@+id/tvProvince"
                    android:fontFamily="sans-serif-condensed"
                    android:text="GAUTENG"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textFontWeight="500"
                    android:textColor="@color/quantum_black_100"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Rate type"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:backgroundTint="@color/gray_darker"
                    android:layout_marginVertical="2.5dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textFontWeight="600"
                    android:textColor="@color/quantum_black_100"
                    android:id="@+id/tvRateType"
                    android:fontFamily="sans-serif-condensed"
                    android:text="PER WAYBILL STRUCTURE"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textFontWeight="500"
                    android:textColor="@color/quantum_black_100"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Province"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:backgroundTint="@color/gray_darker"
                    android:layout_marginVertical="2.5dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textFontWeight="600"
                    android:textColor="@color/quantum_black_100"
                    android:id="@+id/tvBaseAmount"
                    android:fontFamily="sans-serif-condensed"
                    android:text="R 200.00"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvTiers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/layout_tier_item" />

</LinearLayout>