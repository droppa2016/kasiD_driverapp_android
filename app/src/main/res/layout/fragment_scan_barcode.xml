<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".fragments.secureDeliverypackage.ScanBarcodeFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan the Bin barcode for the waybill."
        android:layout_marginHorizontal="@dimen/component_spacing_15dp"
        android:layout_marginVertical="@dimen/component_spacing_15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="19sp"/>

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_below="@+id/main_heading"
        android:layout_marginHorizontal="@dimen/component_spacing_15dp"
        android:layout_height="250dp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewFinder"
        android:id="@+id/barcodeResult"
        android:layout_marginHorizontal="@dimen/component_spacing_15dp"
        android:layout_marginTop="@dimen/component_spacing_20dp"
android:textSize="15sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="@dimen/component_spacing_10dp"
        android:paddingHorizontal="@dimen/component_spacing_5dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear"
            android:layout_marginEnd="2dp"
            android:background="@drawable/button_background_red_borders"
            android:textColor="@color/red"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Done"
            android:layout_marginStart="2dp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"/>

    </LinearLayout>




</RelativeLayout>