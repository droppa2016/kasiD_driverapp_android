<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:scaleType="center"
        android:id="@+id/illustrationImage"
        android:src="@drawable/image_0" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Become a droppa driver"
        android:layout_marginHorizontal="25dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/segoe_ui"
        android:textColor="@color/skynet_color"
        android:textStyle="bold"
        android:id="@+id/txtTitle"
        android:textFontWeight="800"
        android:textSize="@dimen/title_font_size"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor."
        android:layout_marginHorizontal="25dp"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/component_spacing_5dp"
        android:id="@+id/txtContext"
        android:fontFamily="@font/segoe_ui"
        android:textColor="@color/grey_text"
        android:textSize="@dimen/regular_font_size"/>

</LinearLayout>